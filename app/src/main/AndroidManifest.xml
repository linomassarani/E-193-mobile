    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_cbmsc_logo"
        android:label="@string/app_name"
        android:logo="@drawable/ic_cbmsc_logo"
        android:theme="@style/MainTheme" >
        <activity
            android:name=".view.SplashScreenActivity"
            android:theme="@android:style/Theme.Holo.NoActionBar.Fullscreen" >
            <!--intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter-->
        </activity>
        <activity
            android:name=".view.CidadeActivity"
            android:launchMode="singleTop"
            android:theme="@android:style/Theme.Holo.NoActionBar.Fullscreen" />
        <activity
            android:name=".view.LoginActivity"
            android:launchMode="singleTop"
            android:theme="@android:style/Theme.Holo.NoActionBar.Fullscreen" />
        <activity
            android:name=".view.MenuActivity"
            android:label="@string/app_name"
            android:theme="@style/MainTheme" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".view.CidadeActivity" />
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".beach.BeachActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_activity_praia"
            android:parentActivityName=".view.MenuActivity"
            android:theme="@style/PraiaTheme" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.sc.cbm.e193.view.MenuActivity" />
        </activity>
        <activity
            android:name=".beach.edition.insertion.wizard.MainActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/praia_insercao_wizard_name"
            android:parentActivityName=".beach.BeachActivity"
            android:theme="@style/PraiaTheme" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".beach.BeachActivity" />
        </activity>
        <activity
            android:name=".beach.edition.insertion.wizard.ui.gvm.GVMListViewCursorAdaptorActivity"
            android:label="GVMs"
            android:parentActivityName=".beach.edition.insertion.wizard.MainActivity"
            android:theme="@style/PraiaTheme" >
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".beach.edition.insertion.wizard.MainActivity" />
        </activity>
        <activity
            android:name=".beach.edition.insertion.wizard.ui.gvc.GVCListViewCursorAdaptorActivity"
            android:label="GVCs"
            android:parentActivityName=".beach.edition.insertion.wizard.MainActivity"
            android:theme="@style/PraiaTheme" >
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".beach.edition.insertion.wizard.MainActivity" />
        </activity>

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name=".beach.edition.EditionActivity"
            android:label="@string/title_activity_edition"
            android:parentActivityName=".beach.BeachActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.sc.cbm.e193.beach.BeachActivity" />
        </activity>
    </application>

</manifest>
