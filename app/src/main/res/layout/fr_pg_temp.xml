<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/PraiaInsercaoWizardPageContainer">

    <!--<TextView style="@style/PraiaInsercaoWizardPageTitle"/>-->


        <TextView
            style="@style/PraiaInsercaoWizardPageTitle"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="@string/water_temp_text" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true">
            <NumberPicker
                android:id="@+id/water_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:scaleX="1.2"
                android:scaleY="1.2"
                />
                <TextView
                    style="@style/PraiaInsercaoWizardFormLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:capitalize="characters"
                    android:text="@string/celcius"
                    android:textColor="@color/black"
                    android:scaleX="1.5"
                    android:scaleY="1.5"
                    android:layout_gravity="center"/>
            </LinearLayout>
        </RelativeLayout>

</LinearLayout>