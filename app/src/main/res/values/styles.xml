<?xml version="1.0" encoding="utf-8"?>

<resources>

    <color name="firefighter_red">#e03a3e</color>

    <!-- the theme applied to the application or activity -->
    <style name="MainTheme"
        parent="@style/Theme.AppCompat.Light">

        <item name="android:actionBarStyle">@style/MainActionBar</item>
        <item name="android:textAllCaps">false</item>
        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/MainActionBar</item>
    </style>

    <style name="Theme.Transparent" parent="Theme.AppCompat.Dialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">#70111111</item>
    </style>

    <style name="PraiaTheme"
        parent="@style/Theme.AppCompat.Light">

        <item name="android:actionBarStyle">@style/PraiaActionBar</item>
        <item name="android:textAllCaps">false</item>
        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/PraiaActionBar</item>
    </style>


    <!-- ActionBar styles -->
    <style name="MainActionBar"
        parent="@style/Widget.AppCompat.Light.ActionBar">
        <item name="android:background">@color/firefighter_red</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_cbmsc_logo</item>

        <!-- Support library compatibility -->
        <item name="background">@color/firefighter_red</item>
        <item name="homeAsUpIndicator">@drawable/ic_cbmsc_logo</item>
    </style>

    <style name="PraiaActionBar"
        parent="@style/Widget.AppCompat.Light.ActionBar">
        <item name="android:background">@color/firefighter_red</item>
        <!--item name="android:homeAsUpIndicator">@drawable/ic_ocorrencias_praia</item-->

        <!-- Support library compatibility -->
        <item name="background">@color/firefighter_red</item>
        <!--item name="homeAsUpIndicator">@drawable/ic_ocorrencias_praia</item-->
    </style>


</resources>
